request = require('superagent')

show = () ->

  self = {}

  self.findByName = (name, callback) ->
    request
      .get([process.env.API_URL, 'shows', name].join('/'))
      .end (err, res) ->
        callback res.body

  self.findAll = (callback) ->
    request
      .get([process.env.API_URL, 'shows'].join('/'))
      .end (err, res) ->
        callback res.body

  self

module.exports = show()
