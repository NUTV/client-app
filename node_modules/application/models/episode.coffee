request = require('superagent')

episode = () ->

  self = {}

  self.findAllByShowId = (id, callback) ->
    return request
      .get 'localhost:3000/shows/' + id + '/episodes'
      .end (err, res) ->
        callback(res.body)

  # self.findById = (id) ->
